<div class="container bootstrap snippet">
    <div class="row">
		<div class="col-md-12">
		    <div class="blog-comment">
				<h3>Commentaires</h3>
                <hr/>
				<ul class="comments">
                {% for comment in comments %}
				<li class="clearfix">
				  <div class="post-comments">
				      <p class="meta">{{comment.comment_date}} {{comment.author}} a dit le {{ comment.comment_date|date("m/d/Y") }}: <i class="pull-right"><a href="?cible=signaler&id={{post.id}}&comment={{comment.id}}"><small>Signaler ce commentaire</small></a></i></p>
				      <p>
				        {{comment.comment}}
				      </p>
				  </div>
				</li>
                {% else %}    
                <p>Soyez le premier Ã  commenter !</p>
                {% endfor %} 
				</ul>
			</div>
		</div>
	</div>
</div>